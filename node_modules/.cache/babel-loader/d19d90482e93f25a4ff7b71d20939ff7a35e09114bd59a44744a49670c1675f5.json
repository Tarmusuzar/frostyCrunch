categoryName:'Juices', categoryPrice:12, categoryItems:[\r\n                    'Orange',\r\n                    'Watermelon',\r\n                    \r\n                    \r\n                ]},\r\n                \r\n                {categoryName:'Beverages', categoryPrice:4, categoryItems:[\r\n                    'Water',\r\n                    \r\n                    \r\n                    \r\n                ]}\r\n                \r\n            ]\r\n        }\r\n    },\r\n    methods:{\r\n        categoryChosen(category){\r\n            this.currentCategory=category\r\n        \r\n        },\r\n        resetCurrentCategories(){\r\n            this.currentCategory = ''\r\n        }\r\n    }\r\n  }\r\n    </script>\r\n  <style>\r\n  /* Container styles */\r\n  .pos-container {\r\n    height: calc(100vh - 70px);\r\n    display: flex;\r\n    justify-content: space-between;\r\n  }\r\n  \r\n  /* Left side styles */\r\n  .selected-items {\r\n    flex: 1;\r\n    padding: 20px;\r\n    background-color: #fff;\r\n    display: flex;\r\n    justify-content: space-between;\r\n    flex-direction: column;\r\n    overflow-y: auto; /* Add this line to enable vertical scrolling */\r\n  }\r\n  \r\n  .order-summary {\r\n    position: fixed;\r\n    bottom: 0;\r\n    left: 0;\r\n    font-size: 1.2rem;\r\n    width: 100%;\r\n    background-color: rgb(245, 241, 241);\r\n    padding: .1rem;\r\n\r\n  }\r\n  \r\n  /* Right side styles */\r\n  .product-buttons {\r\n    border-left: 1px solid gray;\r\n    flex: 2;\r\n    margin-top: -20px;\r\n    color: black;\r\n    display: flex;\r\n    flex-direction: column;\r\n    height: 100vh;\r\n\r\n  }\r\n  \r\n  .product-button {\r\n    background-color: #fff;\r\n    color: #4CAF50; /* Green */\r\n    border: 2px solid #fff;\r\n    border-radius: 5px;\r\n    padding: 10px;\r\n    margin-bottom: 10px;\r\n    cursor: pointer;\r\n    transition: background-color 0.3s;\r\n  }\r\n  \r\n  .product-button:hover {\r\n    background-color: #e7e7e7;\r\n  }\r\n  \r\n  /* Mini navigation styles */\r\n  .mini-nav {\r\n    margin-top: 20px;\r\n    text-align: right;\r\n  }\r\n  \r\n  button {\r\n    background-color: #4CAF50; /* Green */\r\n    color: #fff;\r\n    border: none;\r\n    padding: 10px 20px;\r\n    border-radius: 5px;\r\n    cursor: pointer;\r\n    font-size: 16px;\r\n  }\r\n  \r\n  button:hover {\r\n    background-color: #45a049; /* Darker Green */\r\n  }\r\n  \r\n  .items {\r\n    list-style: none;\r\n    padding: 0;\r\n    margin: 0;\r\n  }\r\n  @media screen and (max-width: 768px) {\r\n    \r\n    .category{\r\n        flex: 1;\r\n    }\r\n  }\r\n  @media screen and (min-width: 768px) {\r\n    .order-summary{\r\n        width: 35%;\r\n    }\r\n    .place-order-btn{\r\n        flex: .5;\r\n    }\r\n    .category{\r\n        min-height: 7rem;\r\n        flex: none;\r\n    }\r\n  }\r\n  table{\r\n    width: 100%;\r\n  }\r\n  td{\r\n    text-align: right;\r\n  }\r\n  th,td{\r\n    border-bottom: 1px solid rgb(212, 209, 209);\r\n  }\r\n  .mini-nav{\r\n     background-color: rgb(243, 237, 237);\r\n     height: auto;\r\n     display: flex;\r\n     justify-content: space-between;\r\n     \r\n  }\r\n  .categories{\r\n    display: flex;\r\n    justify-content: space-around;\r\n    flex-wrap: wrap;\r\n    align-items: center;\r\n  }\r\n  .category{\r\n    \r\n    background-color: rgb(221, 216, 216);\r\n    padding: 1rem;\r\n    margin: .4rem;\r\n    box-shadow: 2px 4px 2px 1px rgb(214, 211, 211);\r\n    border-radius: 5px;\r\n    font-size: 1.3rem;\r\n    min-width: 10rem;\r\n\r\n    \r\n\r\n  }\r\n  .category:hover{\r\n    background-color: rgb(255, 217, 0);\r\n  }\r\n\r\n  \r\n  </style>\r\n  "],"mappings":"AAuDE,OAAOA,OAAM,MAAO,0BAA0B;AAC9C,eAAc;EACZC,UAAU,EAAC;IACPD;EACJ,CAAC;EACDE,IAAIA,CAAA,EAAE;IACF,OAAM;MACFC,eAAe,EAAC,EAAE;MAClBC,cAAc,EAAC,EAAE;MACjBC,UAAU,EAAC,CACP;QAACC,YAAY,EAAC,gBAAgB;QAAEC,aAAa,EAAC,EAAE;QAAEC,aAAa,EAAC,CAC5D,gBAAgB,EAChB,iBAAiB,EACjB,gBAAgB,EAChB,gBAAgB,EAChB,eAAe;MAElB,CAAC,EACF