Item() {\r\n        this.$emit('removeItem')\r\n    },\r\n    changeQty(){\r\n      console.log(this.$refs.totalQty._value)\r\n    }\r\n    },\r\n    props:['selectedItems'],\r\n    computed:{\r\n      grandtotal(){\r\n        let sum = 0;\r\n        this.selectedItems.forEach(item => {\r\n        sum += item.price;\r\n        });\r\n      return sum;     \r\n        \r\n      }\r\n    },\r\n    emits:['selectedItems']\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  /* Add selected items and order summary styles */\r\n  .selected-items {\r\n    flex: 1;\r\n    padding: 20px;\r\n    background-color: #fff;\r\n    display: flex;\r\n    justify-content: space-between;\r\n    flex-direction: column;\r\n    overflow-y: auto; /* Add this line to enable vertical scrolling */\r\n  }\r\n  \r\n  .order-summary {\r\n    position: fixed;\r\n    bottom: 0;\r\n    left: 0;\r\n    font-size: 1.2rem;\r\n    width: 100%;\r\n    background-color: rgb(245, 241, 241);\r\n    padding: .1rem;\r\n  }\r\n  \r\n  table{\r\n    width: 100%;\r\n  }\r\n  .totals>tr>td{\r\n    text-align: right;\r\n    padding-right: 20px;\r\n    height: 4rem;\r\n    font-size: 2rem;\r\n  }\r\n  \r\n  .totals>tr>th,.totals>tr>td{\r\n    border-bottom: 1px solid rgb(212, 209, 209);\r\n  }\r\n  .mini-nav{\r\n     background-color: rgb(243, 237, 237);\r\n     height: auto;\r\n     display: flex;\r\n     justify-content: space-between;\r\n     \r\n  }\r\n  @media screen and (min-width: 768px) {\r\n    .order-summary{\r\n        width: 35%;\r\n    }}\r\n    .itemHolder>tr>th{\r\n      min-width: 2.5rem;\r\n      text-align: left;\r\n      \r\n    }\r\n    .itemHolder>tr>td{\r\n      text-align: center;\r\n      padding: .5rem;\r\n    }\r\n    .cancel{\r\n      background-color: red;\r\n      border: 1px solid white;\r\n      padding: .1rem;\r\n      color: white;\r\n      border-radius: 4px;\r\n    }\r\n    .itemQty>input{\r\n      max-width: 2rem;\r\n      color: red;\r\n      text-align: center;\r\n    }\r\n