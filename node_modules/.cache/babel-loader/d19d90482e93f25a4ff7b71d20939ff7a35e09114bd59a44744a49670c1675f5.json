["<template>\r\n    <div>\r\n      <home-nav title=\"Place Order\"></home-nav>\r\n      <div class=\"pos-container\">\r\n        <!-- Left side: Selected items -->\r\n        <div class=\"selected-items\">\r\n          <ul class=\"items\">\r\n           \r\n          </ul>\r\n          <div class=\"order-summary\">\r\n            <table >\r\n                <tr>\r\n                    <th>Subtotal:</th>\r\n                    <td>4248{{ subtotal }} AED</td>\r\n                </tr>\r\n                <tr>\r\n                    <th>VAT(5%):</th>\r\n                    <td>4248{{ vat }} AED</td>\r\n                </tr>\r\n                <tr>\r\n                    <th>Grand Total:</th>\r\n                    <td>4248{{ total }} AED</td>\r\n                </tr>\r\n            </table>\r\n            \r\n          </div>\r\n        </div>\r\n  \r\n        <!-- Right side: Product buttons and mini navigation -->\r\n        <div class=\"product-buttons\">\r\n          <ul class=\"mini-nav\">\r\n            <li v-if=\"currentCategory!=''\" @click=\"resetCurrentCategories\">Back</li>\r\n            <li>Braham</li>\r\n            <button class=\"place-order-btn\">Place Order</button>\r\n\r\n          </ul>\r\n          <ul class=\"categories\" v-if=\"this.currentCategory ==''\">\r\n            \r\n            <li  class=\"category\" v-for=\"category in categories\" :key=\"category\" @click=\"categoryChosen(category.categoryItems)\">\r\n            {{ category.categoryName }}\r\n            \r\n          </li>\r\n          </ul>\r\n          <ul class=\"categories\">\r\n            \r\n            <li  class=\"category\" v-for=\"item in currentCategory\" :key=\"item\" @click=\"categoryChosen(category)\">\r\n            {{ item }}\r\n            \r\n          </li>\r\n          </ul>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  <script>\r\n  import HomeNav from '../Reusables/HomeNav.vue';\r\n  export default{\r\n    components:{\r\n        HomeNav\