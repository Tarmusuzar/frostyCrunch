{"ast":null,"code":"export default {\n  data() {\n    return {\n      currentStep: 1,\n      selectedTreat: '',\n      selectedFlavor: 'mango',\n      selectedSize: 'small',\n      selectedDip: 'milkChocolate',\n      selectedToppings: [],\n      selectedDrizzle: 'none',\n      totalPrice: 19,\n      // Default price for frozen banana\n      availableFlavors: ['mango', 'strawberry', 'cherry', 'vanilla', 'banana', 'pinacolada']\n    };\n  },\n  methods: {\n    setStep(step) {\n      this.currentStep = step;\n    },\n    selectTreat(treat) {\n      this.selectedTreat = treat;\n      this.setStep(3); // Move to the Review step automatically for frozen banana\n    },\n    selectFlavor(flavor) {\n      this.selectedFlavor = flavor;\n    },\n    selectSize(size) {\n      this.selectedSize = size;\n    },\n    selectDip(dip) {\n      this.selectedDip = dip;\n    },\n    placeOrder() {\n      console.log('Order Placed:', {\n        Treat: this.selectedTreat === 'frozenBanana' ? 'Frozen Banana' : `${this.selectedSize} ${this.selectedFlavor} ${this.selectedTreat}`,\n        Dip: this.selectedDip,\n        Toppings: this.selectedToppings,\n        Drizzle: this.selectedDrizzle === 'none' ? 'None' : this.selectedDrizzle,\n        TotalPrice: 'AED ' + this.totalPrice.toFixed(2)\n      });\n\n      // Reset selections after placing the order\n      this.resetSelections();\n    },\n    resetSelections() {\n      this.currentStep = 1;\n      this.selectedTreat = '';\n      this.selectedFlavor = 'mango';\n      this.selectedSize = 'small';\n      this.selectedDip = 'milkChocolate';\n      this.selectedToppings = [];\n      this.selectedDrizzle = 'none';\n      this.totalPrice = 19; // Reset price to default for frozen banana\n    }\n  }\n};","map":{"version":3,"names":["data","currentStep","selectedTreat","selectedFlavor","selectedSize","selectedDip","selectedToppings","selectedDrizzle","totalPrice","availableFlavors","methods","setStep","step","selectTreat","treat","selectFlavor","flavor","selectSize","size","selectDip","dip","placeOrder","console","log","Treat","Dip","Toppings","Drizzle","TotalPrice","toFixed","resetSelections"],"sources":["C:\\Users\\ADMIN\\OneDrive\\Desktop\\frostycrunch\\src\\components\\CreateOwn.vue"],"sourcesContent":["\r\n<template>\r\n  <div id=\"app\">\r\n    <div class=\"ice-cream-container\">\r\n      <h1 class=\"title\">Make Your Own</h1>\r\n\r\n      <!-- Step Navigation -->\r\n      <div class=\"step-navigation\">\r\n        <button @click=\"setStep(1)\" :class=\"{ active: currentStep === 1 }\">1. Choose Treat</button>\r\n        <button @click=\"setStep(2)\" :class=\"{ active: currentStep === 2 }\" :disabled=\"currentStep < 2\">2. Customize</button>\r\n        <button @click=\"setStep(3)\" :class=\"{ active: currentStep === 3 }\" :disabled=\"currentStep < 3\">3. Review</button>\r\n      </div>\r\n\r\n      <!-- Step 1: Choose Treat -->\r\n      <div v-show=\"currentStep === 1\" class=\"selection-group\">\r\n        <label class=\"label\">Choose Your Treat:</label>\r\n        <div class=\"button-group\">\r\n          <button @click=\"selectTreat('frozenBanana')\" :class=\"{ active: selectedTreat === 'frozenBanana' }\">Frozen Banana</button>\r\n          <button @click=\"selectTreat('popsicle')\" :class=\"{ active: selectedTreat === 'popsicle' }\">Popsicle Ice Cream</button>\r\n          <button @click=\"selectTreat('cup')\" :class=\"{ active: selectedTreat === 'cup' }\">Cup Ice Cream</button>\r\n          <button @click=\"selectTreat('cone')\" :class=\"{ active: selectedTreat === 'cone' }\">Cone Ice Cream</button>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- Step 2: Customize -->\r\n      <!-- Step 2: Customize -->\r\n<transition name=\"fade\">\r\n  <div v-show=\"currentStep === 2\" class=\"customization-section\">\r\n    <label class=\"label\" v-if=\"selectedTreat !== 'frozenBanana'\">Select Flavor:</label>\r\n    <div class=\"button-group\" v-if=\"selectedTreat !== 'frozenBanana'\">\r\n      <button\r\n        v-for=\"flavor in availableFlavors\"\r\n        :key=\"flavor\"\r\n        @click=\"selectFlavor(flavor)\"\r\n        :class=\"{ active: selectedFlavor === flavor && selectedTreat !== 'frozenBanana' }\"\r\n      >\r\n        {{ flavor }}\r\n      </button>\r\n    </div>\r\n\r\n    <label class=\"label\" v-if=\"selectedTreat !== 'frozenBanana'\">Choose Size:</label>\r\n    <div class=\"button-group\" v-if=\"selectedTreat !== 'frozenBanana'\">\r\n      <button @click=\"selectSize('small')\" :class=\"{ active: selectedSize === 'small' }\">Small</button>\r\n      <button @click=\"selectSize('large')\" :class=\"{ active: selectedSize === 'large' }\">Large</button>\r\n    </div>\r\n\r\n    <label class=\"label\">Pick a Dip:</label>\r\n    <div class=\"button-group\">\r\n      <button @click=\"selectDip('milkChocolate')\" :class=\"{ active: selectedDip === 'milkChocolate' }\">Milk Chocolate üç´</button>\r\n      <button @click=\"selectDip('white')\" :class=\"{ active: selectedDip === 'white' }\">White üç¶</button>\r\n      <button @click=\"selectDip('dark')\" :class=\"{ active: selectedDip === 'dark' }\">Dark üç´</button>\r\n      <button @click=\"selectDip('peanutButter')\" :class=\"{ active: selectedDip === 'peanutButter' }\">Peanut Butter ü•ú</button>\r\n      <button @click=\"selectDip('saltedCaramel')\" :class=\"{ active: selectedDip === 'saltedCaramel' }\">Salted Caramel üçØ</button>\r\n    </div>\r\n  </div>\r\n</transition>\r\n\r\n\r\n      <!-- Step 3: Review -->\r\n      <transition name=\"fade\">\r\n        <div v-show=\"currentStep === 3\" class=\"order-summary\">\r\n          <h3>Your Delicious Creation:</h3>\r\n          <p>üç¶ Treat: {{ selectedTreat === 'frozenBanana' ? 'Frozen Banana' : `${selectedSize} ${selectedFlavor} ${selectedTreat}` }}</p>\r\n          <p>üç´ Dip: {{ selectedDip }}</p>\r\n          <p>üéâ Toppings: {{ selectedToppings.join(', ') || 'None' }}</p>\r\n          <p>üåà Drizzle: {{ selectedDrizzle === 'none' ? 'None' : selectedDrizzle + ' (AED 4 extra)' }}</p>\r\n          <h3>Total Price: AED {{ totalPrice.toFixed(2) }}</h3>\r\n        </div>\r\n      </transition>\r\n\r\n      <!-- Order Button -->\r\n      <button @click=\"placeOrder\" class=\"order-button\" :disabled=\"currentStep < 3\">Place Order</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      currentStep: 1,\r\n      selectedTreat: '',\r\n      selectedFlavor: 'mango',\r\n      selectedSize: 'small',\r\n      selectedDip: 'milkChocolate',\r\n      selectedToppings: [],\r\n      selectedDrizzle: 'none',\r\n      totalPrice: 19, // Default price for frozen banana\r\n      availableFlavors: ['mango', 'strawberry', 'cherry', 'vanilla', 'banana', 'pinacolada'],\r\n    };\r\n  },\r\n  methods: {\r\n    setStep(step) {\r\n      this.currentStep = step;\r\n    },\r\n    selectTreat(treat) {\r\n      this.selectedTreat = treat;\r\n      this.setStep(3); // Move to the Review step automatically for frozen banana\r\n    },\r\n    selectFlavor(flavor) {\r\n      this.selectedFlavor = flavor;\r\n    },\r\n    selectSize(size) {\r\n      this.selectedSize = size;\r\n    },\r\n    selectDip(dip) {\r\n      this.selectedDip = dip;\r\n    },\r\n    placeOrder() {\r\n      console.log('Order Placed:', {\r\n        Treat: this.selectedTreat === 'frozenBanana' ? 'Frozen Banana' : `${this.selectedSize} ${this.selectedFlavor} ${this.selectedTreat}`,\r\n        Dip: this.selectedDip,\r\n        Toppings: this.selectedToppings,\r\n        Drizzle: this.selectedDrizzle === 'none' ? 'None' : this.selectedDrizzle,\r\n        TotalPrice: 'AED ' + this.totalPrice.toFixed(2),\r\n      });\r\n\r\n      // Reset selections after placing the order\r\n      this.resetSelections();\r\n    },\r\n    resetSelections() {\r\n      this.currentStep = 1;\r\n      this.selectedTreat = '';\r\n      this.selectedFlavor = 'mango';\r\n      this.selectedSize = 'small';\r\n      this.selectedDip = 'milkChocolate';\r\n      this.selectedToppings = [];\r\n      this.selectedDrizzle = 'none';\r\n      this.totalPrice = 19; // Reset price to default for frozen banana\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n#app {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin: 0;\r\n  width: 100%;\r\n}\r\n\r\n.ice-cream-container {\r\n  width: 100%;\r\n  background-color: #f8f8f8;\r\n  padding: 20px;\r\n  text-align: center;\r\n  border-radius: 10px;\r\n  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.title {\r\n  color: #ff1f1f;\r\n  font-size: 24px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.label {\r\n  color: #333;\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.select-box {\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  font-size: 16px;\r\n  border: 2px solid #ff1f1f;\r\n  border-radius: 5px;\r\n  background-color: #fff;\r\n  color: #333;\r\n}\r\n\r\n.button-group {\r\n  display: flex;\r\n  justify-content: center;\r\n  flex-wrap: wrap;\r\n}\r\n\r\n.button-group button {\r\n  margin: 5px;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n\r\n.step-navigation {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.step-navigation button {\r\n  margin: 0 10px;\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n  border: none;\r\n  border-radius: 5px;\r\n}\r\n\r\n.step-navigation button.active {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n}\r\n\r\n.step-navigation button:disabled {\r\n  background-color: #ccc;\r\n  cursor: not-allowed;\r\n}\r\n\r\n.order-summary {\r\n  margin-top: 20px;\r\n  text-align: left;\r\n  color: #333;\r\n}\r\n\r\n.order-summary h3 {\r\n  color: #ff1f1f;\r\n  margin-top: 20px;\r\n}\r\n\r\n.order-button {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n  padding: 15px 30px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 18px;\r\n  margin-top: 20px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.order-button:hov