{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  emit: ['closeOptions'],\n  data() {\n    return {\n      selectedToppings: [],\n      currentStep: 1,\n      selectedSize: 'small',\n      selectedDrizzle: 'none',\n      totalPrice: 19 // Default price for frozen banana\n    };\n  },\n  computed: {\n    showToppingStep() {\n      // Show the topping step for all treats except drinks, shakes, coffee, and juices\n      return !['drink', 'shake', 'coffee', 'juice'].includes(this.selectedTreat);\n    },\n    showDrizzleStep() {\n      // Show the drizzle step for all treats except drinks, shakes, coffee, and juices\n      return !['drink', 'shake', 'coffee', 'juice'].includes(this.selectedTreat);\n    }\n  },\n  methods: {\n    // ... (unchanged methods)\n\n    toggleTopping(topping) {\n      const index = this.selectedToppings.indexOf(topping);\n      if (index === -1) {\n        // Topping not in the list, add it\n        this.selectedToppings.push(topping);\n      } else {\n        // Topping already in the list, remove it\n        this.selectedToppings.splice(index, 1);\n      }\n    },\n    isToppingSelected(topping) {\n      return this.selectedToppings.includes(topping);\n    },\n    selectSize(size) {\n      this.selectedSize = size;\n    },\n    selectDrizzle(drizzle) {\n      this.selectedDrizzle = drizzle;\n    },\n    // Add other methods for selecting toppings and drizzles\n\n    // Add to cart functionality\n    addToCart() {\n      const orderDetails = {\n        treat: `${this.selectedSize} ${this.selectedFlavor} ${this.selectedTreat}`,\n        dip: this.selectedDip,\n        toppings: this.selectedToppings,\n        drizzle: this.selectedDrizzle,\n        totalPrice: this.totalPrice.toFixed(2)\n      };\n      console.log('Order Added to Cart:', orderDetails);\n\n      // Reset selections after placing the order\n      this.resetSelections();\n    }\n  }\n};","map":{"version":3,"names":["emit","data","selectedToppings","currentStep","selectedSize","selectedDrizzle","totalPrice","computed","showToppingStep","includes","selectedTreat","showDrizzleStep","methods","toggleTopping","topping","index","indexOf","push","splice","isToppingSelected","selectSize","size","selectDrizzle","drizzle","addToCart","orderDetails","treat","selectedFlavor","dip","selectedDip","toppings","toFixed","console","log","resetSelections"],"sources":["C:\\Users\\ADMIN\\OneDrive\\Desktop\\frostycrunch\\src\\components\\CreateOwn.vue"],"sourcesContent":["<template>\r\n  <div class=\"popup\">\r\n    <button class=\"order-button cancel\" @click=\"$emit('closeOptions')\">Cancel</button>\r\n\r\n    <div id=\"app\">\r\n      <div class=\"ice-cream-container\">\r\n        <h1 class=\"title\">Make Your Own</h1>\r\n\r\n        <!-- Step Navigation -->\r\n        <div class=\"step-navigation\">\r\n          <button @click=\"setStep(1)\" :disabled=\"currentStep === 1\" class=\"step-button\">Size</button>\r\n          <button @click=\"setStep(2)\" :disabled=\"currentStep === 2\" class=\"step-button\" v-if=\"showToppingStep\">Topping</button>\r\n          <button @click=\"setStep(2)\" :disabled=\"currentStep === 2\" class=\"step-button\" v-if=\"showDrizzleStep\">Drizzle</button>\r\n          <button @click=\"setStep(3)\" :disabled=\"currentStep === 3\" class=\"step-button\">Review</button>\r\n        </div>\r\n\r\n        <!-- Step 1: Select Size -->\r\n        <div v-show=\"currentStep === 1\">\r\n          <label class=\"label\">Choose Size:</label>\r\n          <div class=\"button-group\">\r\n            <button @click=\"selectSize('small')\" :class=\"{ active: selectedSize === 'small' }\" class=\"optBtn\">Small</button>\r\n            <button @click=\"selectSize('regular')\" :class=\"{ active: selectedSize === 'regular' }\" class=\"optBtn\">Regular</button>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Step 2: Customize -->\r\n        <div v-show=\"currentStep === 2\">\r\n          <label class=\"label\">Choose Toppings:</label>\r\n          <div class=\"button-group\">\r\n            <!-- Add your topping options here -->\r\n            <!-- Example: -->\r\n            <button @click=\"toggleTopping('m&m')\" :class=\"{ active: isToppingSelected('m&m') }\" class=\"optBtn\">M&M</button>\r\n            <button @click=\"toggleTopping('oreo')\" :class=\"{ active: isToppingSelected('oreo') }\" class=\"optBtn\">Oreo</button>\r\n            <button @click=\"toggleTopping('hazelnuts')\" :class=\"{ active: isToppingSelected('hazelnuts') }\" class=\"optBtn\">Hazelnuts</button>\r\n            <button @click=\"toggleTopping('gingerOatCookies')\" :class=\"{ active: isToppingSelected('gingerOatCookies') }\" class=\"optBtn\">Ginger Oat Cookies</button>\r\n            <button @click=\"toggleTopping('peanuts')\" :class=\"{ active: isToppingSelected('peanuts') }\" class=\"optBtn\">Peanuts</button>\r\n          </div>\r\n\r\n          <label class=\"label\">Choose Drizzle:</label>\r\n          <div class=\"button-group\">\r\n            <!-- Add your drizzle options here -->\r\n            <!-- Example: -->\r\n            <button @click=\"selectDrizzle('lotus')\" :class=\"{ active: selectedDrizzle === 'lotus' }\" class=\"optBtn\">Lotus</button>\r\n            <button @click=\"selectDrizzle('strawberry')\" :class=\"{ active: selectedDrizzle === 'strawberry' }\" class=\"optBtn\">Strawberry</button>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Step 3: Review -->\r\n        <div v-show=\"currentStep === 3\" class=\"order-summary\">\r\n          <h3>Your Delicious Creation:</h3>\r\n          <p>üç¶ Size: {{ selectedSize }}</p>\r\n          <p>üç´ Toppings: {{ selectedToppings.join(', ') || 'None' }}</p>\r\n          <p>üåà Drizzle: {{ selectedDrizzle === 'none' ? 'None' : selectedDrizzle }}</p>\r\n          <h3>Total Price: AED {{ totalPrice.toFixed(2) }}</h3>\r\n        </div>\r\n\r\n        <!-- Next/Place Order Button -->\r\n        <button @click=\"nextStep\" class=\"order-button\" :disabled=\"currentStep === 3\">{{ currentStep === 3 ? 'Place Order' : 'Next' }}</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  emit: ['closeOptions'],\r\n  data() {\r\n    return {\r\n      selectedToppings: [], \r\n      currentStep: 1,\r\n      selectedSize: 'small',\r\n      selectedDrizzle: 'none',\r\n      totalPrice: 19, // Default price for frozen banana\r\n    };\r\n  },\r\n  computed: {\r\n    showToppingStep() {\r\n      // Show the topping step for all treats except drinks, shakes, coffee, and juices\r\n      return !['drink', 'shake', 'coffee', 'juice'].includes(this.selectedTreat);\r\n    },\r\n    showDrizzleStep() {\r\n      // Show the drizzle step for all treats except drinks, shakes, coffee, and juices\r\n      return !['drink', 'shake', 'coffee', 'juice'].includes(this.selectedTreat);\r\n    },\r\n  },\r\n  methods: {\r\n    // ... (unchanged methods)\r\n\r\n    toggleTopping(topping) {\r\n      const index = this.selectedToppings.indexOf(topping);\r\n      if (index === -1) {\r\n        // Topping not in the list, add it\r\n        this.selectedToppings.push(topping);\r\n      } else {\r\n        // Topping already in the list, remove it\r\n        this.selectedToppings.splice(index, 1);\r\n      }\r\n    },\r\n\r\n    isToppingSelected(topping) {\r\n      return this.selectedToppings.includes(topping);\r\n    },\r\n    \r\n    selectSize(size) {\r\n      this.selectedSize = size;\r\n    },\r\n\r\n    selectDrizzle(drizzle) {\r\n      this.selectedDrizzle = drizzle;\r\n    },\r\n\r\n    // Add other methods for selecting toppings and drizzles\r\n\r\n    // Add to cart functionality\r\n    addToCart() {\r\n      const orderDetails = {\r\n        treat: `${this.selectedSize} ${this.selectedFlavor} ${this.selectedTreat}`,\r\n        dip: this.selectedDip,\r\n        toppings: this.selectedToppings,\r\n        drizzle: this.selectedDrizzle,\r\n        totalPrice: this.totalPrice.toFixed(2),\r\n      };\r\n\r\n      console.log('Order Added to Cart:', orderDetails);\r\n\r\n      // Reset selections after placing the order\r\n      this.resetSelections();\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.popup {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background: rgba(22, 22, 22, 0.95);\r\n\r\n  z-index: 1000;\r\n  overflow: scroll;\r\n}\r\n#app {\r\n  width: 80%;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin:2rem auto;\r\n  min-width: 15px;\r\n\r\n  \r\n}\r\n\r\n.ice-cream-container {\r\n  width: 100%;\r\n  background-color: #f8f8f8;\r\n  padding: 20px;\r\n  text-align: center;\r\n  border-radius: 10px;\r\n  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.title {\r\n  color: #ff1f1f;\r\n  font-size: 24px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.label {\r\n  color: #333;\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.select-box {\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  font-size: 16px;\r\n  border: 2px solid #ff1f1f;\r\n  border-radius: 5px;\r\n  background-color: #fff;\r\n  color: #333;\r\n}\r\n\r\n.button-group {\r\n  display: flex;\r\n  justify-content: center;\r\n  flex-wrap: wrap;\r\n}\r\n\r\n.button-group button {\r\n  margin: 5px;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n\r\n.step-navigation {\r\n  margin-bottom: 20px;\r\n  display: flex;\r\n  width: 100%;\r\n  justify-content: center;\r\n}\r\n\r\n.step-navigation button {\r\n  margin: 0 10px;\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n  border: none;\r\n  border-radius: 5px;\r\n}\r\n\r\n.step-navigation button.active {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n}\r\n\r\n.step-navigation button:disabled {\r\n  background-color: #ccc;\r\n  cursor: not-allowed;\r\n}\r\n\r\n.order-summary {\r\n  margin-top: 20px;\r\n  text-align: left;\r\n  color: #333;\r\n}\r\n\r\n.order-summary h3 {\r\n  color: #ff1f1f;\r\n  margin-top: 20px;\r\n}\r\n\r\n.order-button {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n  padding: 15px 30px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 18px;\r\n  margin-top: 20px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.order-button:hover {\r\n  background-color: #e60000;\r\n}\r\n\r\n.optBtn{\r\n  color: rgb(56, 55, 55);\r\n  border: 1px solid gray;\r\n  border-radius: 5px;\r\n  background-color: rgb(235, 232, 232);\r\n}\r\n.active{\r\n  background-color: green;\r\n  color: white;\r\n}\r\n.cancel{\r\n  margin: .4rem 0;\r\n}\r\n\r\n</style>\r\n"],"mappings":";AAgEA,eAAe;EACbA,IAAI,EAAE,CAAC,cAAc,CAAC;EACtBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE,EAAE;MACpBC,WAAW,EAAE,CAAC;MACdC,YAAY,EAAE,OAAO;MACrBC,eAAe,EAAE,MAAM;MACvBC,UAAU,EAAE,EAAE,CAAE;IAClB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,eAAeA,CAAA,EAAG;MAChB;MACA,OAAO,CAAC,CAAC,OAAO,EAAE,OAAO,EAAE,QAAQ,EAAE,OAAO,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACC,aAAa,CAAC;IAC5E,CAAC;IACDC,eAAeA,CAAA,EAAG;MAChB;MACA,OAAO,CAAC,CAAC,OAAO,EAAE,OAAO,EAAE,QAAQ,EAAE,OAAO,CAAC,CAACF,QAAQ,CAAC,IAAI,CAACC,aAAa,CAAC;IAC5E;EACF,CAAC;EACDE,OAAO,EAAE;IACP;;IAEAC,aAAaA,CAACC,OAAO,EAAE;MACrB,MAAMC,KAAI,GAAI,IAAI,CAACb,gBAAgB,CAACc,OAAO,CAACF,OAAO,CAAC;MACpD,IAAIC,KAAI,KAAM,CAAC,CAAC,EAAE;QAChB;QACA,IAAI,CAACb,gBAAgB,CAACe,IAAI,CAACH,OAAO,CAAC;MACrC,OAAO;QACL;QACA,IAAI,CAACZ,gBAAgB,CAACgB,MAAM,CAACH,KAAK,EAAE,CAAC,CAAC;MACxC;IACF,CAAC;IAEDI,iBAAiBA,CAACL,OAAO,EAAE;MACzB,OAAO,IAAI,CAACZ,gBAAgB,CAACO,QAAQ,CAACK,OAAO,CAAC;IAChD,CAAC;IAEDM,UAAUA,CAACC,IAAI,EAAE;MACf,IAAI,CAACjB,YAAW,GAAIiB,IAAI;IAC1B,CAAC;IAEDC,aAAaA,CAACC,OAAO,EAAE;MACrB,IAAI,CAAClB,eAAc,GAAIkB,OAAO;IAChC,CAAC;IAED;;IAEA;IACAC,SAASA,CAAA,EAAG;MACV,MAAMC,YAAW,GAAI;QACnBC,KAAK,EAAG,GAAE,IAAI,CAACtB,YAAY,IAAI,IAAI,CAACuB,cAAc,IAAI,IAAI,CAACjB,aAAc,EAAC;QAC1EkB,GAAG,EAAE,IAAI,CAACC,WAAW;QACrBC,QAAQ,EAAE,IAAI,CAAC5B,gBAAgB;QAC/BqB,OAAO,EAAE,IAAI,CAAClB,eAAe;QAC7BC,UAAU,EAAE,IAAI,CAACA,UAAU,CAACyB,OAAO,CAAC,CAAC;MACvC,CAAC;MAE