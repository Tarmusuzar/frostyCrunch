{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  emit: ['closeOptions'],\n  data() {\n    return {\n      selectedToppings: [],\n      selectedDrizzle: '',\n      currentStep: 1,\n      selectedFlavor: ''\n    };\n  },\n  computed: {\n    showToppingStep() {\n      return true; // Show topping step for all flavors\n    },\n    showDrizzleStep() {\n      return true; // Show drizzle step for all flavors\n    }\n  },\n  methods: {\n    setStep(step) {\n      this.currentStep = step;\n    },\n    selectFlavor(flavor) {\n      this.selectedFlavor = flavor;\n    },\n    toggleTopping(topping) {\n      const index = this.selectedToppings.indexOf(topping);\n      if (index === -1) {\n        this.selectedToppings.push(topping);\n      } else {\n        this.selectedToppings.splice(index, 1);\n      }\n    },\n    selectDrizzle(drizzle) {\n      this.selectedDrizzle = drizzle;\n    },\n    nextStep() {\n      if (this.currentStep < 3) {\n        this.currentStep++;\n      } else {\n        this.placeOrder();\n      }\n    },\n    placeOrder() {\n      console.log('Order Placed:', {\n        Flavor: this.selectedFlavor,\n        Toppings: this.selectedToppings,\n        Drizzle: this.selectedDrizzle || 'None'\n      });\n\n      // Reset selections after placing the order\n      this.resetSelections();\n    },\n    resetSelections() {\n      this.currentStep = 1;\n      this.selectedFlavor = '';\n      this.selectedToppings = [];\n      this.selectedDrizzle = '';\n    }\n  }\n};","map":{"version":3,"names":["emit","data","selectedToppings","selectedDrizzle","currentStep","selectedFlavor","computed","showToppingStep","showDrizzleStep","methods","setStep","step","selectFlavor","flavor","toggleTopping","topping","index","indexOf","push","splice","selectDrizzle","drizzle","nextStep","placeOrder","console","log","Flavor","Toppings","Drizzle","resetSelections"],"sources":["C:\\Users\\ADMIN\\OneDrive\\Desktop\\frostycrunch\\src\\components\\CreateOwn.vue"],"sourcesContent":["<template>\r\n  <div class=\"popup\">\r\n    <button class=\"order-button cancel\" @click=\"$emit('closeOptions')\">Close</button>\r\n\r\n    <div id=\"app\">\r\n      <div class=\"ice-cream-container\">\r\n        <h1 class=\"title\">Build Your Treat</h1>\r\n\r\n        <!-- Step Navigation -->\r\n        <div class=\"step-navigation\">\r\n          <button @click=\"setStep(1)\" :disabled=\"currentStep === 1\" class=\"step-button\">Flavor</button>\r\n          <button @click=\"setStep(2)\" :disabled=\"currentStep === 2\" class=\"step-button\" v-if=\"showToppingStep\">Toppings</button>\r\n          <button @click=\"setStep(2)\" :disabled=\"currentStep === 2\" class=\"step-button\" v-if=\"showDrizzleStep\">Drizzles</button>\r\n          <button @click=\"setStep(3)\" :disabled=\"currentStep === 3\" class=\"step-button\">Review</button>\r\n        </div>\r\n\r\n        <!-- Step 1: Select Flavor -->\r\n        <div v-show=\"currentStep === 1\">\r\n          <label class=\"label\">Choose Flavor:</label>\r\n          <div class=\"button-group\">\r\n            <button @click=\"selectFlavor('chocolate')\" :class=\"{ active: selectedFlavor === 'chocolate' }\" class=\"optBtn\">Chocolate</button>\r\n            <button @click=\"selectFlavor('vanilla')\" :class=\"{ active: selectedFlavor === 'vanilla' }\" class=\"optBtn\">Vanilla</button>\r\n            <button @click=\"selectFlavor('strawberry')\" :class=\"{ active: selectedFlavor === 'strawberry' }\" class=\"optBtn\">Strawberry</button>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Step 2: Customize -->\r\n        <div v-show=\"currentStep === 2\">\r\n          <label class=\"label\">Choose Toppings:</label>\r\n          <div class=\"button-group\">\r\n            <button @click=\"toggleTopping('m&m')\" :class=\"{ active: isToppingSelected('m&m') }\" class=\"optBtn\">M&M</button>\r\n            <button @click=\"toggleTopping('oreo')\" :class=\"{ active: isToppingSelected('oreo') }\" class=\"optBtn\">Oreo</button>\r\n            <button @click=\"toggleTopping('hazelnuts')\" :class=\"{ active: isToppingSelected('hazelnuts') }\" class=\"optBtn\">Hazelnuts</button>\r\n            <button @click=\"toggleTopping('gingerOatCookies')\" :class=\"{ active: isToppingSelected('gingerOatCookies') }\" class=\"optBtn\">Ginger Oat Cookies</button>\r\n            <button @click=\"toggleTopping('peanuts')\" :class=\"{ active: isToppingSelected('peanuts') }\" class=\"optBtn\">Peanuts</button>\r\n          </div>\r\n\r\n          <label class=\"label\">Choose Drizzle:</label>\r\n          <div class=\"button-group\">\r\n            <button @click=\"selectDrizzle('lotus')\" :class=\"{ active: selectedDrizzle === 'lotus' }\" class=\"optBtn\">Lotus</button>\r\n            <button @click=\"selectDrizzle('strawberry')\" :class=\"{ active: selectedDrizzle === 'strawberry' }\" class=\"optBtn\">Strawberry</button>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Step 3: Review -->\r\n        <div v-show=\"currentStep === 3\" class=\"order-summary\">\r\n          <h3>Your Delicious Creation:</h3>\r\n          <p>üç¶ Flavor: {{ selectedFlavor }}</p>\r\n          <p>üç´ Toppings: {{ selectedToppings.join(', ') || 'None' }}</p>\r\n          <p>üåà Drizzle: {{ selectedDrizzle || 'None' }}</p>\r\n        </div>\r\n\r\n        <!-- Next/Place Order Button -->\r\n        <button @click=\"nextStep\" class=\"order-button\" :disabled=\"currentStep === 3\">{{ currentStep === 3 ? 'Place Order' : 'Next' }}</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  emit: ['closeOptions'],\r\n  data() {\r\n    return {\r\n      selectedToppings: [],\r\n      selectedDrizzle: '',\r\n      currentStep: 1,\r\n      selectedFlavor: '',\r\n    };\r\n  },\r\n  computed: {\r\n    showToppingStep() {\r\n      return true; // Show topping step for all flavors\r\n    },\r\n    showDrizzleStep() {\r\n      return true; // Show drizzle step for all flavors\r\n    },\r\n  },\r\n  methods: {\r\n    setStep(step) {\r\n      this.currentStep = step;\r\n    },\r\n    selectFlavor(flavor) {\r\n      this.selectedFlavor = flavor;\r\n    },\r\n    toggleTopping(topping) {\r\n      const index = this.selectedToppings.indexOf(topping);\r\n      if (index === -1) {\r\n        this.selectedToppings.push(topping);\r\n      } else {\r\n        this.selectedToppings.splice(index, 1);\r\n      }\r\n    },\r\n    selectDrizzle(drizzle) {\r\n      this.selectedDrizzle = drizzle;\r\n    },\r\n    nextStep() {\r\n      if (this.currentStep < 3) {\r\n        this.currentStep++;\r\n      } else {\r\n        this.placeOrder();\r\n      }\r\n    },\r\n    placeOrder() {\r\n      console.log('Order Placed:', {\r\n        Flavor: this.selectedFlavor,\r\n        Toppings: this.selectedToppings,\r\n        Drizzle: this.selectedDrizzle || 'None',\r\n      });\r\n\r\n      // Reset selections after placing the order\r\n      this.resetSelections();\r\n    },\r\n    resetSelections() {\r\n      this.currentStep = 1;\r\n      this.selectedFlavor = '';\r\n      this.selectedToppings = [];\r\n      this.selectedDrizzle = '';\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n\r\n\r\n<style scoped>\r\n.popup {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background: rgba(22, 22, 22, 0.95);\r\n\r\n  z-index: 1000;\r\n  overflow: scroll;\r\n}\r\n#app {\r\n  width: 80%;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin:2rem auto;\r\n  min-width: 15px;\r\n\r\n  \r\n}\r\n\r\n.ice-cream-container {\r\n  width: 100%;\r\n  background-color: #f8f8f8;\r\n  padding: 20px;\r\n  text-align: center;\r\n  border-radius: 10px;\r\n  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.title {\r\n  color: #ff1f1f;\r\n  font-size: 24px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.label {\r\n  color: #333;\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.select-box {\r\n  padding: 10px;\r\n  margin: 10px 0;\r\n  font-size: 16px;\r\n  border: 2px solid #ff1f1f;\r\n  border-radius: 5px;\r\n  background-color: #fff;\r\n  color: #333;\r\n}\r\n\r\n.button-group {\r\n  display: flex;\r\n  justify-content: center;\r\n  flex-wrap: wrap;\r\n}\r\n\r\n.button-group button {\r\n  margin: 5px;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n\r\n.step-navigation {\r\n  margin-bottom: 20px;\r\n  display: flex;\r\n  width: 100%;\r\n  justify-content: center;\r\n}\r\n\r\n.step-navigation button {\r\n  margin: 0 10px;\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n  border: none;\r\n  border-radius: 5px;\r\n}\r\n\r\n.step-navigation button.active {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n}\r\n\r\n.step-navigation button:disabled {\r\n  background-color: #ccc;\r\n  cursor: not-allowed;\r\n}\r\n\r\n.order-summary {\r\n  margin-top: 20px;\r\n  text-align: left;\r\n  color: #333;\r\n}\r\n\r\n.order-summary h3 {\r\n  color: #ff1f1f;\r\n  margin-top: 20px;\r\n}\r\n\r\n.order-button {\r\n  background-color: #ff1f1f;\r\n  color: #fff;\r\n  padding: 15px 30px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 18px;\r\n  margin-top: 20px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.order-button:hover {\r\n  background-color: #e60000;\r\n}\r\n\r\n.optBtn{\r\n  color: rgb(56, 55, 55);\r\n  border: 1px solid gray;\r\n  border-radius: 5px;\r\n  background-color: rgb(235, 232, 232);\r\n}\r\n.active{\r\n  background-color: green;\r\n  color: white;\r\n}\r\n.cancel{\r\n  margin: .4rem 0;\r\n}\r\n\r\n</style>\r\n"],"mappings":";AA4DA,eAAe;EACbA,IAAI,EAAE,CAAC,cAAc,CAAC;EACtBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE,EAAE;MACpBC,eAAe,EAAE,EAAE;MACnBC,WAAW,EAAE,CAAC;MACdC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,eAAeA,CAAA,EAAG;MAChB,OAAO,IAAI,EAAE;IACf,CAAC;IACDC,eAAeA,CAAA,EAAG;MAChB,OAAO,IAAI,EAAE;IACf;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,OAAOA,CAACC,IAAI,EAAE;MACZ,I